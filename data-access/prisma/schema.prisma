generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  israeli_id String @unique
  email      String @unique
  full_name  String
  password   String
  createdAt DateTime   @default(now())
  customers Customer[]
}

model Customer {
  id         String @id @default(uuid())
  email      String @unique
  name       String
  phone      String
  createdAt  DateTime @default(now())
  userId     String
  user       User @relation(fields: [userId], references: [id])
}
